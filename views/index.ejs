                    <%# shuffle関数を定義 %>
                    <%
                    const shuffle = (array) => {
                        for (let c=0;c<5;c++){
                            for (let i = array.length - 1; i >= 0; i--) {
                            const j = Math.floor(Math.random() * (i + 1));
                            [array[i], array[j]] = [array[j], array[i]];
                            }
                        }
                        return array;
                        }       
                    %>
                    
                    <%# shuffle関数実行 %>
                    <% shuffle(ans) %>
                    <% const ansLength = ans.length %>
                    <% for (let j=0; j<=ansLength-1;j++){%>
                        <button id="answer-<%= j %>" class="answers"><%= ans[j] %></button>
                    <% } %>
                </div>
            </div>
        <% } %>
